    <style>
        body {
            margin: 0;
            font-family: "Segoe UI", sans-serif;
            background: #f1f1f1;
            text-align: center;
        }

        h1 {
            margin-top: 30px;
            font-size: 32px;
            color: #c62828;
            text-shadow: 1px 1px 2px #fff;
        }

        .grid {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            gap: 10px;
            width: 90%;
            max-width: 900px;
            margin: 20px auto;
        }

        .card {
            background: #fff;
            border-radius: 10px;
            padding: 25px 0;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
            font-size: 20px;
            cursor: pointer;
            user-select: none;
            transition: 0.25s;
        }

        .card:hover {
            transform: scale(1.05);
        }

        .card.revealed {
            background: #ffe082;
            font-weight: bold;
        }

        .label {
            margin-top: 10px;
            font-size: 20px;
