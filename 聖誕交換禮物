function shuffle(arr){
    for(let i=arr.length-1;i>0;i--){
        const j=Math.floor(Math.random()*(i+1));
        [arr[i],arr[j]]=[arr[j],arr[i]];
    }
    return arr;
}

function fillCards(){
    // æ¸…ç©ºæ‰€æœ‰æ ¼å­
    document.getElementById("groupA1").innerHTML="";
    document.getElementById("groupA2").innerHTML="";
    document.getElementById("groupB").innerHTML="";

    // ç¬¬ 1ã€2 è¡Œ 14 å¼µå¡ç‰‡ï¼Œåˆå§‹ç©ºç™½
    createCards("groupA1",7,true);
    createCards("groupA2",7,true);

    // ç¬¬ 3 è¡Œ 7 å¼µå¡ç‰‡ï¼Œåˆå§‹ç©ºç™½
    createCards("groupB",7,true);
}

function createCards(containerId,count,empty=true){
    let container=document.getElementById(containerId);
    for(let i=0;i<count;i++){
        let card=document.createElement("div");
        card.className="card";
        card.textContent=empty?"":getRandomItem(containerId);
        card.addEventListener("click",()=>{
            card.textContent=getRandomItem(containerId);
        });
        container.appendChild(card);
    }
}

function getRandomItem(containerId){
    let source = (containerId==="groupB")?colors:adjectives;
    return source[Math.floor(Math.random()*source.length)];
}

document.getElementById("resetBtn").addEventListener("click",fillCards);

fillCards();
