const colors = [
"æµ·è‹”ç¶ ","é…’ç´…","äº®ç´…","è’¼è …ç¶ ","å¥¶èŒ¶è‰²","å’–å•¡è‰²","æ·±ç´…",
"è¥¿ç“œç¶ ","æœˆå…‰éŠ€","å°å•¤ç¶ ","èŠ¥æœ«é»ƒ","æ³¢éœ¸é»‘","å¤œæ™šè—",
"æ©˜å­æ±½æ°´æ©˜","é¦™è‰ç™½","ç«ç‘°ç²‰","æŸ´çŠ¬ç±³è‰²","æ³¥å·´è‰²",
