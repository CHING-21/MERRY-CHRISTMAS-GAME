function shuffle(arr){
    for(let i=arr.length-1;i>0;i--){
        const j=Math.floor(Math.random()*(i+1));
        [arr[i],arr[j]]=[arr[j],arr[i]];
    }
    return arr;
}

function fillCards(){
    document.getElementById("groupA").innerHTML="";
    document.getElementById("groupB").innerHTML="";
    let pickA=shuffle(adjectives.slice()).slice(0,14);
    let pickB=shuffle(colors.slice()).slice(0,7);
    createCards("groupA",pickA);
    createCards("groupB",pickB);
}

function createCards(containerId,items){
    let container=document.getElementById(containerId);
    items.forEach(item=>{
        let card=document.createElement("div");
        card.className="card";
        card.textContent="";
        card.addEventListener("click",()=>{
            // é¡¯ç¤ºå‹•ç•«
            const ball=document.getElementById("ballAnimation");
            ball.classList.add("show");
            setTimeout(()=>{
                ball.classList.remove("show");
                if(!card.classList.contains("revealed")){
                    card.classList.add("revealed");
                    card.textContent=item;
                }else{
                    // å–®æ ¼é‡æŠ½
                    let source = containerId==="groupA"?adjectives:colors;
                    let newItem;
                    do{
                        newItem=source[Math.floor(Math.random()*source.length)];
                    }while(newItem===card.textContent);
                    card.textContent=newItem;
                }
            },2000); // 2ç§’
        });
        container.appendChild(card);
    });
}

// ä¸€éµé‡æŠ½
document.getElementById("resetBtn").addEventListener("click",fillCards);

fillCards();
